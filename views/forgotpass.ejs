<%- include('partials/homepageHeader.ejs') %>

<div class="container py-3 py-md-5">
    <div class="row justify-content-center align-self-center">
      <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5 col-xxl-4">
        <div class="card border border-light-subtle rounded-3 shadow-sm">
          <div class="card-body p-3 p-md-4 p-xl-5">
            <div class="text-center mb-3">
              <img src="styles/images/logo.png" alt="Logo" width="75" height="75">
            </div>
            <h2 class="fs-6 fw-normal text-center text-secondary mb-4">Reset your password</h2>
            <form action="/forgotpass" method="post">
              <div class="row gy-2 overflow-hidden"> 
                <div class="col-12">
                  <div class="form-floating mb-3">
                    <input type="email" class="form-control" name="emailForgot" id="emailforgot" placeholder="name@example.com" required>
                    <label for="emailforgot" class="form-label">Email</label>
                  </div>
                </div>
                <div class="col-12">
                  <div class="form-floating mb-3">
                    <input type="password" class="form-control" name="newPass" id="newPass" placeholder="Password" required>
                    <label for="newPass" class="form-label">New Password</label>
                  </div>
                </div>
                <div class="col-12">
                  <div class="d-grid my-3">
                    <button class="btn btn-primary btn-lg" type="submit">Reset</button>
                  </div>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>