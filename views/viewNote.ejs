<%- include('partials/header.ejs') %>


<% if(locals.book) {%>
<div class="container mt-5 font">
    <div class="row align-items-center pt-xl-2 pb-5 mb-lg-2 mb-xl-3 mb-xxl-4">
        <div class="col-md-7 col-lg-4 mb-4 mb-md-0">
            <div class="bg-black rounded-5 position-absolute top-0 start-0 " data-aos="zoom-in" data-aos-duration="600" data-aos-offset="250"></div>
            <img src="<%= book[0].src_image %>" class="d-block position-relative z-2 mx-auto" width="200" alt="Image" data-aos="fade-in" data-aos-duration="400" data-aos-offset="250">
        </div>
        <div class="col-md-5 col-xl-4 offset-lg-1" data-aos="fade-up" data-aos-duration="400" data-aos-offset="170">
          <div class="ps-md-3 ps-lg-0">
            <h1 class="text-primary"> <%= book[0].title %> </h1>
            <p class="fs-sm mt-4 text-info">Date Read: <%= new Date(book[0].read_date).toDateString() %></p>
            <p class="fs-sm mt-1 text-info">Recommendation: <%= book[0].rating %>/10</p>
            <p class="fs-sm mt-1 text-info">Author: <%= book[0].author %></p>
          </div>
        </div>
        <div class="col-sm-12 mt-5" data-aos="fade-up" data-aos-duration="400" data-aos-offset="170">
          <p class="fs-5 text-warning"> <%= book[0].head %> </p>
        </div>
        <div class="col-sm-12 mt-5 text-bold" data-aos="fade-up" data-aos-duration="400" data-aos-offset="170">
          <h3 class="text-success mb-4 fw-bold">My Notes:</h3>
          <% let sentences = book[0].note.split('.'); %>
          <% sentences.forEach(sentence => { %>
            <p class="fs-5 text-light"> <%= sentence.trim() %>.</p>
          <% }) %>
        </div>
    </div>
</div>
<% } %>
<script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
<script>
      // initialization of aos
      AOS.init();
  </script>
<%- include('partials/footer.ejs') %>
