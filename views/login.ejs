<%- include('partials/homepageHeader.ejs') %>

<div class="container py-3 py-md-5">
    <div class="row justify-content-center align-self-center">
      <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5 col-xxl-4">
        <!-- Alert -->
        <div id="alert" class="alert alert-success mt-4 alert-dismissible fade <%= formSubmitted ? 'show' : 'd-none' %>" role="alert">
          <%= message %>                        
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        <div class="card border border-light-subtle rounded-3 shadow-sm">
          <div class="card-body p-3 p-md-4 p-xl-5">
            <div class="text-center mb-3">
              <img src="styles/images/logo.png" alt="Logo" width="75" height="75">
            </div>
            <h2 class="fs-6 fw-normal text-center text-secondary mb-4">Log in to Bookfliy</h2>
            <form action="/login" method="post" autocomplete="off">
              <div class="row gy-2 overflow-hidden"> 
                <div class="col-12">
                  <div class="form-floating mb-3">
                    <input type="email" class="form-control" name="emailLogin" id="emailLogin" placeholder="name@example.com" tabindex="1" autofocus required>
                    <label for="emailLogin" class="form-label">Email</label>
                  </div>
                </div>
                <div class="col-12">
                  <div class="form-floating mb-3">
                    <input type="password" class="form-control" name="passwordLogin" id="passwordLogin" value="" placeholder="Password" required>
                    <label for="passwordLogin" class="form-label">Password</label>
                  </div>
                </div>
                <div class="col-12">
                  <div class="d-grid my-3">
                    <button class="btn btn-primary btn-lg" type="submit">Log in</button>
                  </div>
                </div>
                <div class="col-12 text-center">
                  <a href="/forgot" class="link-danger text-decoration-none">Forgot password?</a>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer.ejs') %>
